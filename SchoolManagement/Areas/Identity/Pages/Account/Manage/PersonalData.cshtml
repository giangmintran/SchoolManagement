@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dữ liệu cá nhân";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
            <h5 class="card-title fw-bold text-primary mb-0">
                <i class="bi bi-file-earmark-person-fill me-2"></i>@ViewData["Title"]
            </h5>
        </div>

        <div class="card-body">
            <p class="text-muted mb-4">
                Tài khoản của bạn chứa các dữ liệu cá nhân mà bạn đã cung cấp cho chúng tôi. Trang này cho phép bạn tải xuống hoặc xóa vĩnh viễn dữ liệu đó.
            </p>

            <div class="card border-0 bg-light rounded-4 mb-4">
                <div class="card-body p-4">
                    <div class="row g-3 align-items-center">

                        <div class="col-12 col-md">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3 text-primary flex-shrink-0">
                                    <i class="bi bi-cloud-download-fill fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">Tải xuống dữ liệu</h6>
                                    <p class="text-secondary small mb-0">Tải về toàn bộ dữ liệu cá nhân liên quan đến tài khoản của bạn.</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-auto">
                            <form asp-page="DownloadPersonalData" method="post">
                                <button class="btn btn-primary rounded-3 shadow-sm fw-medium text-nowrap w-100" type="submit">
                                    <i class="bi bi-download me-2"></i>Tải xuống
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card border border-danger border-opacity-25 bg-danger bg-opacity-10 rounded-4">
                <div class="card-body p-4">
                    <div class="row g-3 align-items-center">

                        <div class="col-12 col-md">
                            <div class="d-flex align-items-center">
                                <div class="bg-white p-3 rounded-circle me-3 text-danger shadow-sm flex-shrink-0">
                                    <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold text-danger mb-1">Xóa tài khoản</h6>
                                    <p class="text-danger text-opacity-75 small mb-0">
                                        Hành động này sẽ <strong>xóa vĩnh viễn dữ liệu</strong> và không thể khôi phục.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-auto">
                            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger rounded-3 shadow-sm fw-medium text-nowrap w-100">
                                <i class="bi bi-trash3-fill me-2"></i>Xóa dữ liệu
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}