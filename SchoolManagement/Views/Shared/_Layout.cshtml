@using Microsoft.AspNetCore.Identity
@using SchoolManagement.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // Lấy tên Controller và Action hiện tại
    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

    // Helper: So sánh không phân biệt hoa thường (Fix lỗi không nhận active)
    string GetActiveClass(string controller, string action = null)
    {
        bool isControllerMatch = string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase);

        // Nếu có truyền action thì check cả action (ví dụ phân biệt các trang trong Home)
        if (action != null)
        {
            bool isActionMatch = string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase);
            return (isControllerMatch && isActionMatch) ? "active" : "";
        }

        return isControllerMatch ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="sidebar-overlay"></div>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <div class="d-flex align-items-center">
                    <i class="bi bi-mortarboard-fill me-2 text-primary"></i>
                    <span>SchoolMgt</span>
                </div>
                <button class="btn btn-link text-white-50 d-md-none p-0 ms-auto" id="sidebar-close">
                    <i class="bi bi-x-lg fs-4"></i>
                </button>
            </div>

            <div class="list-group list-group-flush my-3 flex-grow-1">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action @GetActiveClass("Home", "Index")">
                    <i class="bi bi-grid-1x2"></i><span>Dashboard</span>
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="User"
                       asp-action="Index"
                       class="list-group-item list-group-item-action @GetActiveClass("User", "Index")">
                        <i class="bi bi-grid-1x2"></i>
                        <span>Người dùng</span>
                    </a>
                }

                <a asp-controller="Students" asp-action="Index" class="list-group-item list-group-item-action @GetActiveClass("Students")">
                    <i class="bi bi-people"></i><span>Students</span>
                </a>

                <a asp-controller="Teachers" asp-action="Index" class="list-group-item list-group-item-action @GetActiveClass("Teachers")">
                    <i class="bi bi-person-video3"></i><span>Teachers</span>
                </a>

                <a asp-controller="Courses" asp-action="Index" class="list-group-item list-group-item-action @GetActiveClass("Courses")">
                    <i class="bi bi-journal-text"></i><span>Courses</span>
                </a>

                <a asp-controller="Home" asp-action="Privacy" class="list-group-item list-group-item-action @GetActiveClass("Home", "Privacy")">
                    <i class="bi bi-shield-lock"></i><span>Privacy</span>
                </a>
            </div>

            <div class="p-3 text-center small text-muted border-top border-secondary border-opacity-25">
                &copy; 2026 SchoolMgt System
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light sticky-top">
                <div class="container-fluid">
                    <button class="btn btn-light shadow-sm border-0 me-3" id="menu-toggle">
                        <i class="bi bi-list fs-5"></i>
                    </button>

                    <h5 class="m-0 d-none d-sm-block text-secondary">@ViewData["Title"]</h5>

                    <div class="ms-auto d-flex align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="dropdown d-none d-lg-block">
                                <a href="#" class="user-dropdown-toggle dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle fs-5 me-2 text-primary"></i>
                                    <span class="fw-bold small">@User.Identity?.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-3 p-2 rounded-3" aria-labelledby="userDropdown">
                                    <li><div class="dropdown-header">Xin chào, <strong>@User.Identity?.Name</strong></div></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item rounded" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person-gear me-2"></i>Hồ sơ</a></li>
                                    <li><a class="dropdown-item rounded" asp-area="Identity" asp-page="/Account/Manage/ChangePassword"><i class="bi bi-key me-2"></i>Đổi mật khẩu</a></li>
                                    <li><a class="dropdown-item rounded" asp-area="Identity" asp-page="/Account/Manage/PersonalData"><i class="bi bi-database-gear me-2"></i>Dữ liệu</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item rounded text-danger"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>

                            <button class="btn btn-light rounded-circle shadow-sm d-lg-none border" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileUserMenu">
                                <i class="bi bi-person-circle fs-5 text-primary"></i>
                            </button>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm rounded-pill px-3" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                        }
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileUserMenu">
            <div class="offcanvas-header pb-0">
                <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="offcanvas" style="z-index: 10; position: absolute; right: 20px; top: 20px;"></button>
            </div>
            <div class="user-profile-header">
                <div class="user-avatar-large"><i class="bi bi-person"></i></div>
                <h5 class="mb-1">@User.Identity?.Name</h5>
            </div>
            <div class="offcanvas-body p-0">
                <div class="d-flex flex-column gap-1 py-2">
                    <a class="mobile-user-link" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person-gear"></i> Hồ sơ cá nhân</a>
                    <a class="mobile-user-link" asp-area="Identity" asp-page="/Account/Manage/ChangePassword"><i class="bi bi-person-gear"></i> Đổi mật khẩu</a>
                    <a class="mobile-user-link" asp-area="Identity" asp-page="/Account/Manage/PersonalData"><i class="bi bi-person-gear"></i> Dữ liệu</a>
                    <hr class="my-3 mx-3 text-muted opacity-25">
                    <form class="w-100" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="mobile-user-link w-100 border-0 bg-transparent text-danger"><i class="bi bi-box-arrow-right text-danger"></i> Đăng xuất</button>
                    </form>
                </div>
            </div>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // Logic Nút Toggle (Hamburger Menu)
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                // Dùng toggleClass để tự động thêm/bớt class.
                // Nếu đang đóng -> mở. Nếu đang mở -> đóng.
                $("#wrapper").toggleClass("toggled");
            });

            // Logic Đóng Sidebar khi click vào nền mờ (Overlay - Mobile)
            $("#sidebar-overlay").click(function () {
                $("#wrapper").removeClass("toggled"); // Chỉ đóng, không toggle
            });

            // Logic Nút X bên trong Sidebar (Mobile)
            $("#sidebar-close").click(function (e) {
                e.preventDefault();
                $("#wrapper").removeClass("toggled"); // Chỉ đóng
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>