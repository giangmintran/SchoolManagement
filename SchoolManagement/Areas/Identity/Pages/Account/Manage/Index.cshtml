@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="card">
    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3 shadow-sm" role="alert"></div>
        <div class="row g-4">
            <div class="col-md-8 col-lg-9">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0 d-flex justify-content-between align-items-center">
                        <h5 class="card-title fw-bold text-primary mb-0">
                            <i class="bi bi-person-lines-fill me-2"></i>Thông tin tài khoản
                        </h5>
                    </div>

                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-12 mb-3">
                                <label asp-for="Username" class="form-label fw-semibold small text-secondary">Tên đăng nhập</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-person-badge text-muted"></i></span>
                                    <input asp-for="Username" class="form-control bg-light border-start-0 ps-0 text-muted fw-bold" readonly />
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.PhoneNumber" class="form-label fw-semibold small text-secondary">Số điện thoại</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-telephone text-primary"></i></span>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="09xx..." />
                                </div>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger small ms-1"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold small text-secondary">Email liên hệ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope text-muted"></i></span>
                                    <input type="text" class="form-control bg-light border-start-0 ps-0" value="@User.Identity?.Name" readonly disabled />
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Input.Address" class="form-label fw-semibold small text-secondary">Địa chỉ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-geo-alt text-danger"></i></span>
                                    <input asp-for="Input.Address" class="form-control" placeholder="Nhập địa chỉ của bạn..." />
                                </div>
                                <span asp-validation-for="Input.Address" class="text-danger small ms-1"></span>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <div class="d-flex align-items-center gap-3">
                            <button id="update-profile-button" type="submit" class="btn btn-primary px-4 rounded-3 fw-medium shadow-sm">
                                <i class="bi bi-save2 me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                    <div class="card-body text-center d-flex flex-column align-items-center justify-content-center p-4">

                        <h6 class="fw-bold text-secondary mb-3">Ảnh đại diện</h6>

                        <div class="position-relative mb-4">
                            <div class="position-absolute top-50 start-50 translate-middle rounded-circle border border-2 border-primary border-opacity-25" style="width: 170px; height: 170px;"></div>

                            <img id="avatarPreview"
                                 src="@Model.CurrentProfilePicture"
                                 alt="Avatar"
                                 class="rounded-circle shadow object-fit-cover bg-white p-1"
                                 style="width: 160px; height: 160px; z-index: 2; position: relative;" />

                            <label for="imgUpload"
                                   class="btn btn-primary rounded-circle position-absolute bottom-0 end-0 shadow border border-3 border-white d-flex align-items-center justify-content-center"
                                   style="width: 45px; height: 45px; z-index: 3; transform: translate(-10%, -10%); cursor: pointer;"
                                   title="Thay đổi ảnh">
                                <i class="bi bi-camera-fill fs-5"></i>
                            </label>
                        </div>

                        <input asp-for="Input.ProfilePicture" id="imgUpload" type="file" class="d-none" accept="image/*" onchange="previewAvatar(this)" />

                        <p class="text-muted small fst-italic mb-0">
                            Cho phép: JPG, GIF hoặc PNG. <br> Kích thước tối đa 5MB.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewAvatar(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.getElementById('avatarPreview');
                    img.src = e.target.result;

                    // Hiệu ứng Visual feedback
                    img.style.opacity = 0.5;
                    img.style.transform = "scale(0.95)";
                    img.style.transition = "all 0.3s ease";

                    setTimeout(() => {
                        img.style.opacity = 1;
                        img.style.transform = "scale(1)";
                    }, 200);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}