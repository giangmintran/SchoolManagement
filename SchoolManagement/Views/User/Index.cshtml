@* Lưu ý: Model lúc này không phải List nữa mà là PagedResult *@
@model SchoolManagement.Common.PagedResult<SchoolManagement.Models.UserRolesViewModel>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container-fluid py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-users me-2"></i>Danh sách người dùng
            </h5>
            <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-4">
                <i class="fas fa-plus me-1"></i> Thêm mới
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Email / Tài khoản</th>
                            <th>Phân quyền (Roles)</th>
                            <th class="text-center" style="width: 150px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Items != null && Model.Items.Any())
                        {
                            foreach (var user in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-3 bg-primary bg-opacity-10 text-primary fw-bold d-flex justify-content-center align-items-center"
                                                 style="width: 40px; height: 40px; border-radius: 50%;">
                                                @user.Email?.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@user.Email</div>
                                                <small class="text-muted">ID: @user.UserId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (user.Roles != null && user.Roles.Any())
                                        {
                                            foreach (var role in user.Roles)
                                            {
                                                var badgeClass = role.ToLower().Contains("admin") ? "bg-danger" : "bg-info text-dark";
                                                <span class="badge @badgeClass rounded-pill me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">N/A</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-outline-warning btn-sm me-1" title="Sửa">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@user.UserId" method="post" class="d-inline" onsubmit="return confirm('Xóa user này?');">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>Không tìm thấy dữ liệu</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white py-3 d-flex justify-content-between align-items-center">
            <div class="text-muted small">
                Trang <strong>@Model.PageIndex</strong> / <strong>@Model.TotalPages</strong>
            </div>

            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm m-0">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        // Chỉ hiển thị trang đầu, trang cuối, và các trang xung quanh trang hiện tại
                        if (i == 1 || i == Model.TotalPages || (i >= Model.PageIndex - 2 && i <= Model.PageIndex + 2))
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                        else if (i == Model.PageIndex - 3 || i == Model.PageIndex + 3)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>