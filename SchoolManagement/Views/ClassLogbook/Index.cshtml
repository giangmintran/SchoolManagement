@model IEnumerable<SchoolManagement.Data.Entities.ClassLogbook>

@{
    ViewData["Title"] = "Quản lý Sổ đầu bài";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý Sổ đầu bài</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Lập sổ mới
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-white">
            <form method="get" asp-action="Index" class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold">Lớp <span class="text-danger">(*)</span></label>
                    <select name="className" class="form-select" asp-items="ViewBag.Classes" required>
                        <option value="">-- Chọn lớp --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold">Tuần học</label>
                    <input type="number" name="weekNumber" class="form-control"
                           placeholder="VD: 1" value="@ViewBag.SelectedWeek">
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Hoặc tìm theo ngày</label>
                    <input type="date" name="searchDate" class="form-control"
                           value="@(ViewBag.SelectedDate != null ? ViewBag.SelectedDate.ToString("yyyy-MM-dd") : "")">
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-light border ms-2">
                        <i class="fas fa-sync"></i> Xóa lọc
                    </a>
                </div>
            </form>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">Tuần</th>
                            <th>Năm học</th>
                            <th>Lớp</th>
                            <th>Thời gian</th>
                            <th>Nhận xét GVCN</th>
                            <th class="text-center" style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center fw-bold text-primary">
                                        @item.WeekNumber
                                    </td>
                                    <td>@item.SchoolYear</td>
                                    <td>
                                        <span class="badge bg-info text-dark">Lớp @item.Class</span>
                                    </td>
                                    <td>
                                        <small>
                                            @item.FromDate.ToString("dd/MM") - @item.ToDate.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.HomeroomTeacherComment) && item.HomeroomTeacherComment.Length > 50)
                                        {
                                            <span>@item.HomeroomTeacherComment.Substring(0, 50)...</span>
                                        }
                                        else
                                        {
                                            <span>@item.HomeroomTeacherComment</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Xem/In">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                    onclick="setDeleteInfo('@item.Id', 'Tuần @item.WeekNumber - Lớp @item.Class')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    Không tìm thấy dữ liệu sổ đầu bài nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteModal" />

@section Scripts {
    <script>
        // Hàm set thông tin cho Modal Delete
        function setDeleteInfo(id, name) {
            // Giả sử modal của bạn có input hidden id là 'deleteId' và span hiển thị tên là 'deleteName'
            // Và form action trỏ về ClassLogbook/Delete
            var form = document.querySelector('#deleteModal form');
            form.action = '/ClassLogbook/Delete/' + id;

            document.getElementById('deleteItemName').innerText = name;
        }
    </script>
}