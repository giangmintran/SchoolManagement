@{
    ViewData["Title"] = "Bàn làm việc giáo viên";
}

<style>
    /* CSS tùy chỉnh cho Dashboard */
    .card-dashboard {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        transition: transform 0.2s;
    }

        .card-dashboard:hover {
            transform: translateY(-5px);
        }

    .icon-box {
        font-size: 2rem;
        opacity: 0.8;
    }

    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fc;
    }

    .badge-soft-success {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .badge-soft-warning {
        background-color: #fff3cd;
        color: #664d03;
    }

    .badge-soft-danger {
        background-color: #f8d7da;
        color: #842029;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-chalkboard-teacher me-2"></i>Bàn làm việc giáo viên</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Xuất báo cáo tuần
        </a>
    </div>

    <div class="row">

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-dashboard border-left-primary h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Lịch dạy hôm nay
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">4 Tiết</div>
                            <small class="text-muted">Tiết tiếp theo: 10A2 (Tiết 3)</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day icon-box text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-dashboard border-left-warning h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Sổ đầu bài (Chưa ký)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">2 Lớp</div>
                            <small class="text-danger">10A1, 11B3 chưa ký tuần này</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-pen-nib icon-box text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-dashboard border-left-info h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Trạng thái giáo án
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">80%</div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <small class="text-muted">Đã duyệt: Tuần 12</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list icon-box text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-dashboard border-left-success h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Lớp chủ nhiệm (12A1)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">45/45 HS</div>
                            <small class="text-muted">Vi phạm tuần này: 0</small>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users icon-box text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4 d-none d-md-block">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-calendar-alt me-1"></i> Lịch Báo Giảng (Hôm nay)</h6>
                    <div class="dropdown no-arrow">
                        <a href="#" class="btn btn-sm btn-outline-primary">Xem cả tuần</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Tiết</th>
                                    <th>Lớp</th>
                                    <th>Môn</th>
                                    <th>Tên bài dạy / PPCT</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>1</strong></td>
                                    <td>12A1</td>
                                    <td>Toán</td>
                                    <td>Khảo sát hàm số (Tiết 12)</td>
                                    <td><span class="badge badge-soft-success">Đã dạy</span></td>
                                    <td><button class="btn btn-sm btn-light"><i class="fas fa-edit text-primary"></i></button></td>
                                </tr>
                                <tr>
                                    <td><strong>2</strong></td>
                                    <td>11B5</td>
                                    <td>Toán</td>
                                    <td>Phương trình lượng giác (Tiết 10)</td>
                                    <td><span class="badge badge-soft-warning">Đang diễn ra</span></td>
                                    <td><button class="btn btn-sm btn-light"><i class="fas fa-edit text-primary"></i></button></td>
                                </tr>
                                <tr>
                                    <td><strong>4</strong></td>
                                    <td>10A2</td>
                                    <td>Toán</td>
                                    <td>Mệnh đề tập hợp (Tiết 8)</td>
                                    <td><span class="badge badge-soft-danger">Chưa dạy</span></td>
                                    <td><button class="btn btn-sm btn-primary">Điểm danh</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-book me-1"></i> Sổ đầu bài cần chú ý</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold">Lớp 11B3</span> - Tiết 2 (Hôm qua)
                                <br /><small class="text-danger">Xếp loại: C (Ồn ào)</small>
                            </div>
                            <button class="btn btn-sm btn-outline-danger">Xử lý</button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold">Lớp 10A1</span> - Tiết 5 (Thứ 2)
                                <br /><small class="text-muted">Chưa ký sổ</small>
                            </div>
                            <button class="btn btn-sm btn-outline-warning">Ký ngay</button>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success"><i class="fas fa-file-upload me-1"></i> Nộp giáo án tuần tới</h6>
                </div>
                <div class="card-body text-center">
                    <p class="mb-2 text-muted">Hạn nộp: Thứ 7, 12/10/2023</p>
                    <button class="btn btn-success w-100"><i class="fas fa-cloud-upload-alt"></i> Tải lên file Word/PDF</button>
                </div>
            </div>
        </div>
    </div>
</div>