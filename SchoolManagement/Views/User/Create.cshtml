@model SchoolManagement.Models.Users.CreateUserViewModel

@{
    ViewData["Title"] = "Thêm người dùng";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .card {
        border-radius: 16px;
    }

    .form-control:focus, .form-select:focus {
        box-shadow: 0 0 0 0.2rem rgba(13,110,253,.15);
        border-color: #0d6efd;
    }

    .input-group-text {
        min-width: 45px;
        justify-content: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd, #0b5ed7);
        border: none;
    }

    .btn-success {
        background: linear-gradient(135deg, #198754, #157347);
        border: none;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-xl-5 col-lg-6 col-md-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                    <i class="fas fa-user-plus fa-2x mb-2"></i>
                    <h4 class="mb-0 fw-bold">Thêm Người Dùng Mới</h4>
                    <small class="opacity-75">Quản lý tài khoản hệ thống</small>
                </div>

                <div class="card-body p-4">

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger small"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                Tên đăng nhập
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="Email"
                                       class="form-control"
                                       placeholder="vidu@school.edu.vn" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                Mật khẩu
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-key text-primary"></i>
                                </span>
                                <input asp-for="Password"
                                       type="text"
                                       class="form-control"
                                       id="txtPassword"
                                       placeholder="Mật khẩu sẽ hiện tại đây..." />

                                <button class="btn btn-outline-primary"
                                        type="button"
                                        onclick="generatePassword()"
                                        title="Tạo mật khẩu ngẫu nhiên">
                                    <i class="fas fa-sync-alt me-1"></i> Tạo mới
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-4">
                            <label asp-for="SelectedRole" class="form-label fw-semibold">
                                Vai trò
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-user-shield text-primary"></i>
                                </span>
                                <select asp-for="SelectedRole"
                                        class="form-select"
                                        asp-items="ViewBag.Roles">
                                    <option value="" disabled selected>-- Chọn vai trò --</option>
                                </select>
                            </div>
                            <span asp-validation-for="SelectedRole" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-1"></i> Lưu
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function generatePassword() {
        const length = 10;
        
        // Các nhóm ký tự nguồn
        const upper = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        const lower = "abcdefghijklmnopqrstuvwxyz";
        const digits = "0123456789";
        const specials = "!@@#$%^&*";
        const allChars = upper + lower + digits + specials;

        let passwordArray = [];

        // BƯỚC 1: Lấy chắc chắn mỗi loại ít nhất 1 ký tự (để vượt qua mọi validation)
        passwordArray.push(digits.charAt(Math.floor(Math.random() * digits.length)));     // Bắt buộc có số
        passwordArray.push(specials.charAt(Math.floor(Math.random() * specials.length))); // Bắt buộc có ký tự đặc biệt
        passwordArray.push(upper.charAt(Math.floor(Math.random() * upper.length)));       // Bắt buộc có chữ hoa
        passwordArray.push(lower.charAt(Math.floor(Math.random() * lower.length)));       // Bắt buộc có chữ thường

        // BƯỚC 2: Điền ngẫu nhiên cho đủ độ dài (10 ký tự)
        while (passwordArray.length < length) {
            passwordArray.push(allChars.charAt(Math.floor(Math.random() * allChars.length)));
        }

        // BƯỚC 3: Trộn lộn xộn (Shuffle) để các ký tự bắt buộc không nằm theo thứ tự dễ đoán
        const password = passwordArray.sort(() => 0.5 - Math.random()).join('');

        // Gán vào ô input
        document.getElementById("txtPassword").value = password;
    }

    document.addEventListener("DOMContentLoaded", function() {
        generatePassword();
    });
</script>