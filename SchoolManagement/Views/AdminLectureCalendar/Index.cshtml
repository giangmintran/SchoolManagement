@model IEnumerable<SchoolManagement.Data.Entities.LectureCalendar>

@{
    ViewData["Title"] = "Quản trị - Lịch Báo Giảng";
    var weekList = ViewBag.WeekList as List<int>;
}

<style>
    .card-filter {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.04);
    }

    .table-custom thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #e9ecef;
        color: #495057;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table-custom tbody tr {
        transition: all 0.2s;
    }

        .table-custom tbody tr:hover {
            background-color: #fdfdfd;
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

    .week-badge {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-weight: bold;
    }
</style>

<div class="container-fluid px-4 py-4 bg-light min-vh-100">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="fas fa-user-shield me-2"></i>Quản lý Lịch Báo Giảng</h2>
            <p class="text-muted small mb-0 mt-1">Quản lý và theo dõi kế hoạch giảng dạy toàn trường</p>
        </div>
    </div>

    <div class="card card-filter mb-4 bg-white">
        <div class="card-body p-4">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary small text-uppercase mb-2">Chọn Tuần</label>

                    <div class="input-group modern-select-group">
                        <span class="input-group-text">
                            <i class="fas fa-calendar-week"></i>
                        </span>
                        <select name="week" class="form-select shadow-sm text-primary fw-bold"
                                style="cursor: pointer;" onchange="this.form.submit()">
                            <option value="" class="text-secondary">-- Tất cả các tuần --</option>
                            @if (weekList != null)
                            {
                                foreach (var w in weekList)
                                {
                                    <option value="@w" selected="@(ViewBag.CurrentWeek == w)">
                                        Tuần @w.ToString("00")
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold text-secondary small text-uppercase">Tìm Giáo Viên</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-chalkboard-teacher text-primary"></i></span>
                        <input type="text" name="searchTeacher" class="form-control border-start-0 ps-0"
                               placeholder="Nhập tên giáo viên..." value="@ViewBag.SearchTeacher">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4 fw-bold">
                            <i class="fas fa-filter me-2"></i>Lọc dữ liệu
                        </button>
                        <a asp-action="Index" class="btn btn-light text-secondary border px-3" title="Làm mới">
                            <i class="fas fa-sync-alt"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 fw-bold text-secondary"><i class="fas fa-list me-2"></i>Danh sách báo giảng</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-custom mb-0 align-middle">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 80px;">Tuần</th>
                        <th>Giáo Viên</th>
                        <th>Thời gian áp dụng</th>
                        <th>Ngày nộp/tạo</th>
                        <th class="text-center" style="width: 120px;">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <div class="week-badge bg-primary bg-opacity-10 text-primary mx-auto">
                                        @item.Week
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">@item.TeacherName</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center fs-6">
                                        <i class="far fa-calendar-alt me-2 text-primary"></i>
                                        <span class="fw-medium">@item.StartDate.ToString("dd/MM")</span>

                                        <i class="fas fa-arrow-right mx-2 text-muted" style="font-size: 12px;"></i>

                                        <span class="fw-medium">@item.EndDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </td>

                                <td>
                                    <span class="badge bg-light text-dark border fw-normal fs-6 px-3 py-2">
                                        @item.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 transition-btn">
                                        Chi tiết <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="text-muted opacity-50">
                                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                                    <p class="mb-0">Không tìm thấy dữ liệu phù hợp.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>