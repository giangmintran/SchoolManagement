@page
@model ForgotPasswordConfirmation
@{
    Layout = null;
    ViewData["Title"] = "Xác nhận gửi email";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        /* CSS đồng bộ với trang Login và ForgotPassword */
        :root {
            --primary-color: #4e73df;
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --card-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--primary-gradient);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            width: 100%;
            max-width: 500px;
            background: white;
            border-radius: 20px;
            box-shadow: var(--card-shadow);
            padding: 3rem 2.5rem;
            animation: fadeInUp 0.8s ease;
            position: relative;
            overflow: hidden;
            text-align: center; /* Căn giữa nội dung cho trang xác nhận */
        }

            /* Thanh trang trí top */
            .login-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 5px;
                background: var(--primary-gradient);
            }

        .icon-box {
            width: 90px;
            height: 90px;
            background: rgba(40, 167, 69, 0.1); /* Màu xanh lá nhạt cho trạng thái thành công */
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem auto;
            color: #28a745; /* Màu xanh lá cho icon */
            transition: all 0.3s ease;
        }

        .login-card:hover .icon-box {
            transform: scale(1.05);
            background: rgba(40, 167, 69, 0.2);
        }

        h3 {
            color: #333;
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        p {
            color: #6c757d;
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .btn-login {
            display: inline-block;
            background: var(--primary-gradient);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-size: 1rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            text-decoration: none;
            transition: all 0.3s ease;
            color: white;
            font-weight: 600;
            width: 100%;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                color: white;
            }

        /* Animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @@media (max-width: 576px) {
            .login-card {
                padding: 2rem 1.5rem;
            }
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="icon-box">
            <i class="bi bi-envelope-check-fill" style="font-size: 2.5rem;"></i>
        </div>

        <h3>Đã gửi email!</h3>

        <p>
            Vui lòng kiểm tra email của bạn để đặt lại mật khẩu.<br />
            <span class="small fst-italic text-danger-emphasis">
                (Nếu bạn không thấy email vui lòng liên hệ quản trị để lấy lại mật khẩu)
            </span>
        </p>

        <div>
            <a asp-page="./Login" class="btn btn-login">
                Quay lại đăng nhập <i class="bi bi-arrow-return-left ms-1"></i>
            </a>
        </div>

        <div class="text-center mt-4 pt-3 border-top">
            <p class="text-muted small mb-0 mt-1">&copy; @DateTime.Now.Year School Management System</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>