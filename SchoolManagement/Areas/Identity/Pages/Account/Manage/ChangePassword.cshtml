@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card">
    <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
        <h5 class="card-title fw-bold text-primary mb-0">
            <i class="bi bi-shield-lock-fill me-2"></i>@ViewData["Title"]
        </h5>
    </div>

    <div class="card-body">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3 shadow-sm" role="alert"></div>

            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Input.OldPassword" class="form-label fw-semibold small text-secondary">Mật khẩu hiện tại</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-key text-muted"></i></span>
                        <input asp-for="Input.OldPassword" class="form-control bg-light border-start-0 ps-0 text-muted fw-bold" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu cũ..." />
                    </div>
                    <span asp-validation-for="Input.OldPassword" class="text-danger small ms-1"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.NewPassword" class="form-label fw-semibold small text-secondary">Mật khẩu mới</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-lock text-primary"></i></span>
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu mới..." />
                    </div>
                    <span asp-validation-for="Input.NewPassword" class="text-danger small ms-1"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold small text-secondary">Xác nhận mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-shield-check text-primary"></i></span>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập lại mật khẩu mới..." />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small ms-1"></span>
                </div>
            </div>

            <hr class="my-4 text-muted opacity-25">

            <div class="d-flex align-items-center gap-3">
                <button type="submit" class="btn btn-primary px-4 rounded-3 fw-medium shadow-sm">
                    <i class="bi bi-check-circle-fill me-2"></i>Cập nhật mật khẩu
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}